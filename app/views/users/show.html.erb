<h1><%= @user.name %>さんのタスクリスト</h1>


<div class="row">
  <% if current_user == @user %>
  	<div class="pull-right col-xs-10 col-xs-pull-1 col-sm-5 col-sm-pull-1 col-lg-4 col-lg-pull-2">
  		<%= form_for(@tasklists) do |f| %>
  			<div class ="imput-group">
  				<%= f.label :content, 'Myタスク作成' %>
  				<%= f.text_field :content, class: 'form-control' %>
  			</div>
  			<div class ="imput-group">
  				<%= f.label :status, 'メモ' %>
  				<%= f.text_field :status, class: 'form-control' %>
  			</div>
  			<br>
  			<%= f.submit '保存', class: 'btn btn-primary' %>
  		<% end %>
  	</div>
    <div class ="pull-left col-xs-9 col-xs-push-1 col-sm-5 col-sm-push-1 col-lg-4 col-lg-push-2">
      <ul>
        <% @mylists.each do |mylist| %>
          <br>
          <li class ="taskshow_li"><%= link_to mylist.content, "/task_lists/#{mylist.id}", class: "tasklink_color" %></li>
        <% end %>
      </ul>
    </div>
  <% else %>
    <div class ="col-sm-12 col-sm-offset-2 col-sm-8 col-lg-offset-3 col-lg-6">
      <ul>
        <% @mylists.each do |mylist| %>
          <br>
          <li class ="taskshow_li"><%= link_to mylist.content, "/task_lists/#{mylist.id}", class: "tasklink_color" %></li>
        <% end %>
      </ul>
    </div> 
  <% end %>
</div>

